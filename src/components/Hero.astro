---
import { getTranslations, type Language } from '../i18n';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---

<section class="min-h-screen flex items-center pt-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="space-y-6">
        <!-- Status Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-wine-900/30 light:bg-wine-50 border border-wine-700/50 light:border-wine-200 rounded-full scroll-reveal">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
          </span>
          <span class="text-sm font-medium text-wine-300 light:text-wine-700">{t.hero.status}</span>
        </div>

        <!-- Main Heading -->
        <div class="space-y-2 scroll-reveal delay-100">
          <p class="text-text-secondary light:text-gray-600 text-lg font-medium">{t.hero.greeting}</p>
          <h1 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold text-text-primary light:text-gray-900">
            {t.hero.name}
          </h1>
          <p class="text-2xl md:text-3xl font-display font-medium gradient-text">
            {t.hero.role}
          </p>
        </div>

        <!-- Description -->
        <p class="text-text-secondary light:text-gray-600 text-lg leading-relaxed max-w-xl scroll-reveal delay-200">
          {t.hero.description}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4 scroll-reveal delay-300">
          <a href="#projects" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            {t.hero.cta}
          </a>
          <a href="#contact" class="btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {t.hero.contact}
          </a>
        </div>

        <!-- Quick Links -->
        <div class="flex items-center gap-6 pt-4 scroll-reveal delay-400">
          <a 
            href="https://github.com/SrCidm" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-text-muted light:text-gray-500 hover:text-wine-400 light:hover:text-wine-600 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <span class="text-sm font-medium">GitHub</span>
          </a>
          <a 
            href="https://linkedin.com/in/sergio-cid" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center gap-2 text-text-muted light:text-gray-500 hover:text-wine-400 light:hover:text-wine-600 transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            <span class="text-sm font-medium">LinkedIn</span>
          </a>
          <a 
            href="mailto:Sergio.g.cid.m@gmail.com"
            class="flex items-center gap-2 text-text-muted light:text-gray-500 hover:text-wine-400 light:hover:text-wine-600 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <span class="text-sm font-medium">Email</span>
          </a>
        </div>
      </div>

      <!-- Visual Element -->
      <div class="hidden lg:flex justify-center items-center scroll-reveal delay-300">
        <div class="relative">
          <!-- Decorative elements -->
          <div class="absolute -inset-4 bg-gradient-to-r from-wine-700/20 to-wine-900/20 rounded-3xl blur-2xl"></div>
          <div class="relative w-80 h-96 rounded-3xl bg-gradient-to-br from-surface-card to-surface-darker light:from-gray-100 light:to-white border border-surface-border light:border-gray-200 p-6 flex flex-col justify-between">
            <!-- Code block decoration -->
            <div class="font-mono text-sm space-y-1 text-left">
              <p class="text-text-muted light:text-gray-400">
                <span class="text-wine-400">const</span> <span class="text-text-primary light:text-gray-900">developer</span> = {'{'}
              </p>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                name: <span class="text-wine-300 light:text-wine-600">"Sergio Cid"</span>,
              </p>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                role: <span class="text-wine-300 light:text-wine-600">"Full-Stack"</span>,
              </p>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                available: <span class="text-green-400">true</span>,
              </p>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                skills: [
              </p>
              <a href="#projects" data-filter="javascript" class="skill-link pl-8 text-wine-300 light:text-wine-600 hover:text-wine-100 light:hover:text-wine-800 cursor-pointer transition-colors block">
                "JavaScript",
              </a>
              <a href="#projects" data-filter="python" class="skill-link pl-8 text-wine-300 light:text-wine-600 hover:text-wine-100 light:hover:text-wine-800 cursor-pointer transition-colors block">
                "Python",
              </a>
              <a href="#projects" data-filter="react" class="skill-link pl-8 text-wine-300 light:text-wine-600 hover:text-wine-100 light:hover:text-wine-800 cursor-pointer transition-colors block">
                "React/Next.js",
              </a>
              <a href="#projects" data-filter="node.js" class="skill-link pl-8 text-wine-300 light:text-wine-600 hover:text-wine-100 light:hover:text-wine-800 cursor-pointer transition-colors block">
                "Node.js,"
              </a>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                <!-- See More Link -->
                <a 
                  href="#projects" 
                  class="group flex items-center justify-center gap-2 mt-4 py-2 text-wine-400 hover:text-wine-300 light:text-wine-600 light:hover:text-wine-700 transition-colors"
                >
                  <span class="text-sm font-medium" data-i18n-hero="seeMore">
                    {lang === 'es' ? 'Ver m√°s...' : 'See more...'}
                  </span>
                  <svg class="w-4 h-4 group-hover:translate-y-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                  </svg>
                </a>
              </div>
              <p class="pl-4 text-text-secondary light:text-gray-600">
                ],
              </p>
              </p>
              <p class="text-text-muted light:text-gray-400">{'}'}</p>
            </div>
            
          <!-- Floating badges -->
          <div class="absolute -top-4 -right-4 px-3 py-1.5 bg-surface-card light:bg-white border border-surface-border light:border-gray-200 rounded-lg shadow-lg">
            <span class="text-xs font-mono text-wine-400">React</span>
          </div>
          <div class="absolute -bottom-4 -left-4 px-3 py-1.5 bg-surface-card light:bg-white border border-surface-border light:border-gray-200 rounded-lg shadow-lg">
            <span class="text-xs font-mono text-wine-400">Next.js</span>
          </div>
          <div class="absolute top-1/2 -right-8 px-3 py-1.5 bg-surface-card light:bg-white border border-surface-border light:border-gray-200 rounded-lg shadow-lg">
            <span class="text-xs font-mono text-wine-400">TypeScript</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Skill links click handler - triggers filter in projects section
  document.querySelectorAll('.skill-link').forEach(link => {
    link.addEventListener('click', (e) => {
      const filter = (e.currentTarget as HTMLElement).dataset.filter;
      if (filter) {
        // Store filter in sessionStorage to apply after scroll
        sessionStorage.setItem('projectFilter', filter);
      }
    });
  });
</script>
