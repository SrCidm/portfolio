---
import { getTranslations, type Language } from '../i18n';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
---

<section id="contact" class="py-20 lg:py-32">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <!-- Section Header -->
      <div class="scroll-reveal">
        <h2 class="section-title">{t.contact.title}</h2>
        <p class="section-subtitle mt-2 mb-12">{t.contact.subtitle}</p>
      </div>

      <!-- Contact Cards -->
      <div class="grid sm:grid-cols-2 gap-6">
        <!-- Email Card -->
        <a 
          href="https://mail.google.com/mail/?view=cm&to=Sergio.g.cid.m@gmail.com&su=Contacto%20desde%20Portfolio"
          target="_blank"
          rel="noopener noreferrer"
          class="card group flex flex-col items-center text-center p-8 scroll-reveal-left"
        >
          <div class="w-14 h-14 rounded-full bg-wine-900/30 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-6 h-6 text-wine-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <!-- ✅ Título blanco en ambos modos -->
          <h3 class="contact-card-title text-lg font-display font-semibold mb-2">
            {t.contact.email}
          </h3>
          <p class="text-text-secondary text-sm break-all group-hover:text-wine-400 transition-colors">
            Sergio.g.cid.m@gmail.com
          </p>
        </a>

        <!-- Social Card -->
        <div class="card flex flex-col items-center text-center p-8 scroll-reveal-right">
          <div class="w-14 h-14 rounded-full bg-wine-900/30 flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-wine-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
            </svg>
          </div>
          <!-- ✅ Título blanco en ambos modos -->
          <h3 class="contact-card-title text-lg font-display font-semibold mb-4">
            {t.contact.social}
          </h3>
          <div class="flex items-center justify-center gap-4">
            <a 
              href="https://github.com/SrCidm"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-surface-border flex items-center justify-center text-text-muted hover:bg-wine-700 hover:text-white transition-all"
              aria-label="GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a 
              href="https://linkedin.com/in/srcidm"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-surface-border flex items-center justify-center text-text-muted hover:bg-wine-700 hover:text-white transition-all"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a 
              href="https://twitter.com/SrCidm"
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-surface-border flex items-center justify-center text-text-muted hover:bg-wine-700 hover:text-white transition-all"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12 scroll-reveal delay-200 flex flex-wrap justify-center gap-4">
        <a href="#projects" class="btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          {lang === 'es' ? 'Ver Proyectos' : 'View Projects'}
        </a>
        <a 
          href="https://github.com/SrCidm" 
          target="_blank" 
          rel="noopener noreferrer" 
          class="btn-secondary"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          {lang === 'es' ? 'Ver GitHub' : 'View GitHub'}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* ✅ Títulos "Email" y "Social" — blanco en dark y light mode */
  .contact-card-title {
    color: #ffffff !important;
  }
</style>