---
import { getTranslations, languages, type Language } from '../i18n';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
const otherLang = lang === 'en' ? 'es' : 'en';
const otherLangPath = lang === 'en' ? '/es' : '/';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-surface-dark/80 light:bg-white/80 backdrop-blur-lg border-b border-surface-border light:border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      
      <!-- Logo -->
      <a href={lang === 'en' ? '/' : '/es'} class="flex items-center gap-2 group cursor-pointer">
        <img 
          src="https://avatars.githubusercontent.com/u/160346195?v=4" 
          alt="Sergio Cid Logo" 
          class="size-8 rounded-full object-cover border border-wine-500/20 transition-all duration-300 group-hover:scale-110 group-hover:border-wine-500"
        />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#experience" class="nav-link">{t.nav.experience}</a>
        <a href="#projects" class="nav-link">{t.nav.projects}</a>
        <a href="#contact" class="nav-link">{t.nav.contact}</a>
      </div>

      <!-- Controls -->
      <div class="flex items-center gap-3">
        <!-- Language Toggle -->
        <a 
          href={otherLangPath}
          class="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-text-secondary light:text-gray-600 
                 hover:text-wine-400 light:hover:text-wine-600 transition-colors rounded-lg 
                 hover:bg-surface-card light:hover:bg-gray-100"
          aria-label={`Switch to ${languages[otherLang]}`}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <span class="uppercase">{otherLang}</span>
        </a>

        <!-- Theme Toggle -->
        <button 
          id="theme-toggle"
          class="p-2 text-text-secondary light:text-gray-600 hover:text-wine-400 light:hover:text-wine-600 
                 transition-colors rounded-lg hover:bg-surface-card light:hover:bg-gray-100"
          aria-label="Toggle theme"
        >
          <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- Mobile Menu Button — animado a X -->
        <button 
          id="mobile-menu-btn"
          class="md:hidden p-2 text-text-secondary light:text-gray-600 hover:text-wine-400 transition-colors relative w-10 h-10 flex items-center justify-center"
          aria-label="Toggle menu"
          aria-expanded="false"
        >
          <!-- Hamburger icon -->
          <span class="menu-icon flex flex-col gap-1.5 transition-all duration-300">
            <span class="bar block w-5 h-0.5 bg-current rounded-full transition-all duration-300 origin-center"></span>
            <span class="bar block w-5 h-0.5 bg-current rounded-full transition-all duration-300 origin-center"></span>
            <span class="bar block w-5 h-0.5 bg-current rounded-full transition-all duration-300 origin-center"></span>
          </span>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation — slide + fade animado -->
    <div 
      id="mobile-menu" 
      class="md:hidden overflow-hidden transition-all duration-300 ease-in-out"
      style="max-height: 0; opacity: 0;"
    >
      <div class="flex flex-col py-3 border-t border-surface-border/50 light:border-gray-100">
        
        <!-- Nav item con stagger delay -->
        <a 
          href="#experience" 
          class="mobile-nav-link nav-item group flex items-center gap-3 px-2 py-3 rounded-lg text-text-secondary light:text-gray-600 hover:text-wine-400 light:hover:text-wine-600 hover:bg-surface-card/50 light:hover:bg-gray-50 transition-all duration-200 font-medium"
          style="opacity: 0; transform: translateX(-12px);"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-wine-700/40 group-hover:bg-wine-400 transition-colors duration-200 shrink-0"></span>
          {t.nav.experience}
        </a>

        <a 
          href="#projects" 
          class="mobile-nav-link nav-item group flex items-center gap-3 px-2 py-3 rounded-lg text-text-secondary light:text-gray-600 hover:text-wine-400 light:hover:text-wine-600 hover:bg-surface-card/50 light:hover:bg-gray-50 transition-all duration-200 font-medium"
          style="opacity: 0; transform: translateX(-12px);"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-wine-700/40 group-hover:bg-wine-400 transition-colors duration-200 shrink-0"></span>
          {t.nav.projects}
        </a>

        <a 
          href="#contact" 
          class="mobile-nav-link nav-item group flex items-center gap-3 px-2 py-3 rounded-lg text-text-secondary light:text-gray-600 hover:text-wine-400 light:hover:text-wine-600 hover:bg-surface-card/50 light:hover:bg-gray-50 transition-all duration-200 font-medium"
          style="opacity: 0; transform: translateX(-12px);"
        >
          <span class="w-1.5 h-1.5 rounded-full bg-wine-700/40 group-hover:bg-wine-400 transition-colors duration-200 shrink-0"></span>
          {t.nav.contact}
        </a>

        <!-- Divider + socials rápidos en mobile -->
        <div class="mt-3 pt-3 border-t border-surface-border/30 light:border-gray-100 flex items-center gap-4 px-2 nav-item" style="opacity: 0; transform: translateX(-12px);">
          <a href="https://github.com/SrCidm" target="_blank" rel="noopener noreferrer"
             class="text-text-muted hover:text-wine-400 transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a href="https://linkedin.com/in/sergio-cid" target="_blank" rel="noopener noreferrer"
             class="text-text-muted hover:text-wine-400 transition-colors">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <span class="ml-auto text-text-muted text-xs font-mono">sergio.dev</span>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  const bars = btn?.querySelectorAll('.bar');
  const navItems = menu?.querySelectorAll('.nav-item');

  let isOpen = false;

  function openMenu() {
    isOpen = true;
    btn?.setAttribute('aria-expanded', 'true');

    // Slide down del contenedor
    if (menu) {
      menu.style.maxHeight = menu.scrollHeight + 'px';
      menu.style.opacity = '1';
    }

    // Animación hamburger → X
    if (bars && bars.length === 3) {
      (bars[0] as HTMLElement).style.transform = 'translateY(8px) rotate(45deg)';
      (bars[1] as HTMLElement).style.opacity = '0';
      (bars[1] as HTMLElement).style.transform = 'scaleX(0)';
      (bars[2] as HTMLElement).style.transform = 'translateY(-8px) rotate(-45deg)';
    }

    // Stagger de cada nav item
    navItems?.forEach((item, i) => {
      setTimeout(() => {
        (item as HTMLElement).style.opacity = '1';
        (item as HTMLElement).style.transform = 'translateX(0)';
        (item as HTMLElement).style.transition = 'opacity 0.25s ease, transform 0.25s ease';
      }, 60 + i * 60);
    });
  }

  function closeMenu() {
    isOpen = false;
    btn?.setAttribute('aria-expanded', 'false');

    // Slide up
    if (menu) {
      menu.style.maxHeight = '0';
      menu.style.opacity = '0';
    }

    // Restaurar hamburger
    if (bars && bars.length === 3) {
      (bars[0] as HTMLElement).style.transform = '';
      (bars[1] as HTMLElement).style.opacity = '1';
      (bars[1] as HTMLElement).style.transform = '';
      (bars[2] as HTMLElement).style.transform = '';
    }

    // Reset items para próxima apertura
    setTimeout(() => {
      navItems?.forEach((item) => {
        (item as HTMLElement).style.opacity = '0';
        (item as HTMLElement).style.transform = 'translateX(-12px)';
        (item as HTMLElement).style.transition = 'none';
      });
    }, 300);
  }

  btn?.addEventListener('click', () => {
    isOpen ? closeMenu() : openMenu();
  });

  // Cerrar al hacer click en un link
  menu?.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', closeMenu);
  });

  // Cerrar al hacer click fuera del header
  document.addEventListener('click', (e) => {
    const header = document.querySelector('header');
    if (isOpen && header && !header.contains(e.target as Node)) {
      closeMenu();
    }
  });
</script>