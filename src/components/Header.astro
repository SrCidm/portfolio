---
import { getTranslations, languages, type Language } from '../i18n';

interface Props {
  lang?: Language;
}

const { lang = 'en' } = Astro.props;
const t = getTranslations(lang);
const otherLang = lang === 'en' ? 'es' : 'en';
const otherLangPath = lang === 'en' ? '/es' : '/';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-surface-dark/80 light:bg-white/80 backdrop-blur-lg border-b border-surface-border light:border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={lang === 'en' ? '/' : '/es'} class="flex items-center gap-2 group">
        <span class="text-xl font-display font-bold text-text-primary light:text-gray-900">
          SC<span class="text-wine-500">.</span>
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#experience" class="nav-link">{t.nav.experience}</a>
        <a href="#projects" class="nav-link">{t.nav.projects}</a>
        <a href="#contact" class="nav-link">{t.nav.contact}</a>
      </div>

      <!-- Controls -->
      <div class="flex items-center gap-3">
        <!-- Language Toggle -->
        <a 
          href={otherLangPath}
          class="flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-text-secondary light:text-gray-600 
                 hover:text-wine-400 light:hover:text-wine-600 transition-colors rounded-lg 
                 hover:bg-surface-card light:hover:bg-gray-100"
          aria-label={`Switch to ${languages[otherLang]}`}
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
          <span class="uppercase">{otherLang}</span>
        </a>

        <!-- Theme Toggle -->
        <button 
          id="theme-toggle"
          class="p-2 text-text-secondary light:text-gray-600 hover:text-wine-400 light:hover:text-wine-600 
                 transition-colors rounded-lg hover:bg-surface-card light:hover:bg-gray-100"
          aria-label="Toggle theme"
        >
          <!-- Sun icon (shown in dark mode) -->
          <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <!-- Moon icon (shown in light mode) -->
          <svg class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>

        <!-- Mobile Menu Button -->
        <button 
          id="mobile-menu-btn"
          class="md:hidden p-2 text-text-secondary light:text-gray-600 hover:text-wine-400 transition-colors"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-2">
        <a href="#experience" class="nav-link py-2">{t.nav.experience}</a>
        <a href="#projects" class="nav-link py-2">{t.nav.projects}</a>
        <a href="#contact" class="nav-link py-2">{t.nav.contact}</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu on link click
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
    });
  });
</script>
